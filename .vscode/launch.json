    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'eyes'",
            "cargo": {
                "env": {
                    "RUST_BACKTRACE": "1",
                },
                "args": [
                    "build",
                    "--bin=eyes",
                    "--package=eyes"
                ],
                "filter": {
                    "name": "eyes",
                    "kind": "bin"
                }
            },
            // export DYLD_FALLBACK_LIBRARY_PATH="$(xcode-select --print-path)/usr/lib/"
            // export DYLD_FALLBACK_LIBRARY_PATH="/Applications/Xcode.app/Contents/Developer/usr/lib/"
            "args": [],
            "cwd": "${workspaceFolder}",
        },
    ]
